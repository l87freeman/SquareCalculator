<!DOCTYPE html>
<html ng-app="gCalculator">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <base href="/">
    <title>GCalculator</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Angular/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/angular")

    <script defer src="https://use.fontawesome.com/releases/v5.0.7/js/all.js"></script>

    <script type="text/javascript">
        if (!window.MApps) {
            window.MApps = {};
        }
        window.MApps = {
            Location: function (p) {
                var s = (p && p[0] === "/") ? p.substring(1) : p;

                return '@Url.Content("~")' + s;
            }
        };
    </script>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a ui-sref-opts="{reload:true,inherit:false}" ui-sref="default" class="navbar-brand">Calculator</a>
                @*@Html.ActionLink("Calculator", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })*@
            </div>
            <div class="navbar-collapse collapse" ng-controller="topMenu">
                <ul class="nav navbar-nav">
                    <li ui-sref-active="active"><a ui-sref-opts="{reload:true,inherit:false}" ui-sref="calculator">Calculator</a></li>
                    <li ui-sref-active="active"><a ui-sref-opts="{reload:true,inherit:false}" ui-sref="logs">Logger info</a></li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        <div id="page-wrapper" ng-cloak>
            <ui-view>
            </ui-view>
        </div>
    </div>

    
    @Scripts.Render("~/bundles/app")
</body>
</html>